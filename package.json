{
  "name": "@codoonfxd/crn-elements",
  "version": "0.2.1",
  "description": "A ReactNative Component Library of CodoonFXD.",
  "keywords": [
    "ReactNative",
    "Component"
  ],
  "author": "沈经纬 <327538014@qq.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "directories": {
    "dist": "dist",
    "test": "__tests__"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/codoonfxd/crn-elements"
  },
  "scripts": {
    "test": "echo \"Error: run tests from root\" && exit 1",
    "build": "tsc",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "docs-dev": "docsify serve docs",
    "changelog": "conventional-changelog -i docs/CHANGELOG.md -s -t -r 0 -p angular",
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "run-ios": "react-native run-ios"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/runtime": "^7.4.2",
    "@codoonfxd/changelog-config": "^0.1.0",
    "@codoonfxd/commitlint-config": "^0.1.0",
    "@commitlint/cli": "^7.5.2",
    "@types/react": "^16.8.8",
    "@types/react-native": "^0.46.0",
    "conventional-changelog-cli": "^2.0.12",
    "docsify-cli": "^4.3.0",
    "husky": "^1.3.1",
    "metro-react-native-babel-preset": "^0.53.1",
    "react": "^16.8.4",
    "react-native": "^0.59.1",
    "react-native-gesture-handler": "^1.1.0",
    "react-native-typescript-transformer": "^1.2.12",
    "react-navigation": "^3.5.1",
    "tslint": "^5.14.0",
    "typescript": "^3.3.3333",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@codoonfxd/commitlint-config"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint",
      "git add"
    ]
  },
  "dependencies": {
    "@types/color": "^3.0.0",
    "@types/lodash": "^4.14.123",
    "color": "^3.1.0",
    "lodash": "^4.17.11"
  }
}
